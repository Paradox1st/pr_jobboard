<div class="row">
  <div class="col mb-3">
    <h1 class="text-secondary">Job Source: {{jobboard}}</h1>
  </div>
</div>
<div class="row">
  <div class="col table-responsive">
    <table class="table table-dark table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Company</th>
          <th scope="col">Job Title</th>
          <th scope="col">Job URL</th>
        </tr>
      </thead>
      <tbody>
        {{#each opportunities}}
        {{#with this}}
        <tr>
          <td>
            {{id}}
          </td>
          <td>
            {{company}}
          </td>
          <td>
            {{title}}
          </td>
          <td>
            <a href="{{url}}">{{url}}</a>
          </td>
        </tr>
        {{/with}}
        {{/each}}
      </tbody>
    </table>
  </div>
</div>